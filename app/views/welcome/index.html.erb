<div class="survey-questions hidden">
	<% user = User.create %>

	<div id="question-email" class="question-group email">
		<%= validated_form_for(user) do |f| %>
			<label>What is your name?</label>
				<input class="form-control" type="text" id="user_name" name="user[full_name]" parsley-trigger="keyup" required>
			<label>What is your email?</label>
			<p>Entering your email will allow us to contact you with news and information about this project.</p>
			<div class="form-group">
				<input class="form-control" type="email" id="user_email" name="user[email]" parsley-trigger="keyup" required>
				<%= f.submit "Next", class: "btn btn-primary" %>
			</div>

		<% end %>
	</div>

	<% qid = 24 %>
	<div id="question-<%= qid %>" class="question-group <%= qid %>">
		<% q = Question.find( qid ) %>
		<% r = Response.new %>
		<%= form_for(r) do |f|%>
			<%= f.hidden_field :user_id, value: user.id %>
			<%= f.hidden_field :question_id, value: qid %>

			<label><%=q.query%></label>
			<%= f.text_field :int_val, class: 'form-control', required: "" %>

			<input type='button' class='btn btn-link' value='Back' name='Back'/>
			<%= f.submit "Next", class: "btn btn-primary" %>
		<% end %>
	</div>

